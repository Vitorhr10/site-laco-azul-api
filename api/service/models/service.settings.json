{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "name": "service"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
